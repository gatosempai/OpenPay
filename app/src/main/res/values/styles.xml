<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubText">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:textColor">@color/imageBackgroundTint</item>

        <item name="android:textSize">12sp</item>
    </style>

    <style name="Image">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="BottomNavigation" >
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="itemRippleColor">@color/imageBackgroundTint</item>
        <item name="itemIconTint">@color/imageBackgroundTint</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="itemTextAppearanceActive">@color/colorPrimary</item>

    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimaryDark</item>

        <item name="android:textColor">@color/colorPrimary</item>

    </style>
</resources>